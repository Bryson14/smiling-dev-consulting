---
import { getCollection } from "astro:content";
import ProjectCard from "@/components/ProjectCard.astro";
import Layout from "@/layouts/main.astro";

let projects = await getCollection("projects");
projects = projects.sort((a, b) => {
	return (
		new Date(b.data.updateDate).getTime() -
		new Date(a.data.updateDate).getTime()
	);
});
---

<Layout
  title="Projects | Smiling Dev Consulting"
  description="View our portfolio of web development and consulting projects"
>
  <main class="container mx-auto px-4 py-12">
    <h1
      class="text-4xl font-bold text-center mb-12 text-foreground dark:text-foreground"
    >
      Our Projects
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        projects.map((project) => (
          <ProjectCard
            title={project.data.title}
            description={project.data.description}
            updated={project.data.updateDate}
            image={project.data.image?.src ?? ""}
            link={`/projects/${project.data.slug}`}
          />
        ))
      }
    </div>

    <div class="mt-12 text-center">
      <p class="text-muted-foreground dark:text-muted-foreground max-w-2xl mx-auto">
        Looking to start your own project? Let's discuss how we can help bring
        your vision to life.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center px-6 py-3 mt-6 bg-primary dark:bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 dark:hover:bg-primary/90 transition-colors"
      >
        Start a Project
        <svg
          class="w-5 h-5 ml-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </main>
</Layout>
