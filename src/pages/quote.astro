---
import MainLayout from "../layouts/main.astro";
import QuoteQuestionnaire from "../components/QuoteQuestionnaire";
import JsonLd from "../components/JsonLd.astro";

const quoteStructuredData = {
	"@context": "https://schema.org",
	"@type": "WebPage",
	name: "Get a Project Quote - Smiling Dev Consulting",
	description:
		"Get a personalized quote for your web development project. Quick 3-minute questionnaire to help us understand your needs.",
	url: Astro.url.href,
};
---

<MainLayout 
  title="Get a Quote - Smiling Dev Consulting" 
  description="Get a personalized quote for your web development project. Quick 3-minute questionnaire to help us understand your needs."
>
  <JsonLd data={quoteStructuredData} />

  <div class="container mx-auto px-4 py-12">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          Get Your Project Quote
        </h1>
        <p class="text-xl text-muted-foreground">
          Answer a few quick questions to receive a personalized estimate
        </p>
      </div>

      <div class="bg-background rounded-lg shadow-lg p-6 md:p-8">
        <QuoteQuestionnaire client:load />
      </div>
    </div>
  </div>

  <style>
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fadeIn {
      animation: fadeIn 0.3s ease-out;
    }
  </style>
</MainLayout>
