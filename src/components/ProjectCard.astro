---
import { Picture } from 'astro:assets';
interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
  technologies?: string[];
}

const { title, description, image, link } = Astro.props;
---

<a href={link} class="group">
  <div class="overflow-hidden rounded-lg border border-slate-200 transition-all duration-300 hover:shadow-lg dark:border-slate-700">
    <div class="relative aspect-video w-full overflow-hidden">
      <Picture
        src={image}
        alt={title}
        formats={["avif", "webp"]}
        class:list={["h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"]}
      />
    </div>
    <div class="p-4">
      <h3 class="mb-2 text-xl font-semibold transition-colors">{title}</h3>
      <p class="text-slate-600 dark:text-slate-300">{description}</p>
    </div>
  </div>
</a>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  div {
    animation: fadeIn 0.5s ease-out forwards;
  }
</style>