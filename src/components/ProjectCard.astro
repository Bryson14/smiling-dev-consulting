---
import { Picture } from "astro:assets";

interface Props {
	title: string;
	description: string;
	image: string;
	link: string;
	updated: Date;
	technologies?: string[];
}

const { title, description, image, link, updated } = Astro.props;
---

<a href={link} class="group">
  <div
    class="overflow-hidden rounded-lg border border-border transition-all duration-300 hover:shadow-lg dark:border-border"
  >
    {
      image && image !== "" && (
        <div class="relative aspect-video w-full overflow-hidden">
          {/* TODO use Picture component */}
          <img 
            src={image}
            alt={title}
            class:list={[
              "h-full w-full object-cover transition-transform duration-300 group-hover:scale-105",
            ]}
          />
        </div>
      )
    }
    <div class="p-4">
      <h3 class="mb-2 text-xl font-semibold transition-colors">{title}</h3>
      <p class="text-muted-foreground dark:text-muted-foreground">{description}</p>
      <p class="text-muted-foreground/70 text-sm">Updated: {updated.toLocaleDateString()}</p>
    </div>
  </div>
</a>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  div {
    animation: fadeIn 0.5s ease-out forwards;
  }
</style>
