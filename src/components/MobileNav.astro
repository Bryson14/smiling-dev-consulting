---
import { Image } from "astro:assets";
import { Menu, X } from "@lucide/astro";
---

<button
  id="mobile-menu-button"
  type="button"
  class="md:hidden p-2 rounded-lg hover:bg-muted dark:hover:bg-muted transition-colors"
  aria-label="Open mobile menu"
>
  <Menu size={24} />
</button>

<div
  id="mobile-menu-overlay"
  class="fixed inset-0 z-[60] md:hidden opacity-0 invisible transition-opacity duration-300 ease-in-out"
>
  <div class="absolute inset-0 bg-background dark:bg-background h-screen"></div>

  <div class="relative h-full flex flex-col">
    <div
      class="flex items-center justify-between p-4 border-b border-border dark:border-border"
    >
      <div class="flex items-center space-x-2">
        <Image
          src="/smiling-dev-logo-small.png"
          alt="Smiling Dev Logo"
          height={32}
          width={32}
        />
        <span class="font-semibold text-xl text-primary dark:text-primary">
          Smiling Dev
        </span>
      </div>
      <button
        id="mobile-menu-close"
        type="button"
        class="p-2 rounded-lg hover:bg-muted dark:hover:bg-muted transition-colors"
        aria-label="Close mobile menu"
      >
        <X size={24} />
      </button>
    </div>

    <nav class="flex-1 px-4 py-8">
      <ul class="space-y-4">
        <li>
          <a
            href="/"
            class="block text-2xl font-medium text-foreground dark:text-foreground hover:text-primary dark:hover:text-primary transition-colors py-3"
          >
            Home
          </a>
        </li>
        <li>
          <a
            href="/about"
            class="block text-2xl font-medium text-foreground dark:text-foreground hover:text-primary dark:hover:text-primary transition-colors py-3"
          >
            About
          </a>
        </li>
        <li>
          <a
            href="/services"
            class="block text-2xl font-medium text-foreground dark:text-foreground hover:text-primary dark:hover:text-primary transition-colors py-3"
          >
            Services
          </a>
        </li>
        <li>
          <a
            href="/projects"
            class="block text-2xl font-medium text-foreground dark:text-foreground hover:text-primary dark:hover:text-primary transition-colors py-3"
          >
            Projects
          </a>
        </li>
        <li>
          <a
            href="/blog"
            class="block text-2xl font-medium text-foreground dark:text-foreground hover:text-primary dark:hover:text-primary transition-colors py-3"
          >
            Blog
          </a>
        </li>
        <li>
          <a
            href="/contact"
            class="block text-2xl font-medium text-foreground dark:text-foreground hover:text-primary dark:hover:text-primary transition-colors py-3"
          >
            Contact
          </a>
        </li>
      </ul>
    </nav>
  </div>

  <script>
    const menuButton = document.getElementById("mobile-menu-button");
    const menuOverlay = document.getElementById("mobile-menu-overlay");
    const closeButton = document.getElementById("mobile-menu-close");
    const body = document.body;

    function openMenu() {
      if (!menuOverlay) return;
      menuOverlay.classList.remove("opacity-0", "invisible");
      // FIX 2: Use a class to prevent body scroll. It's cleaner than direct style manipulation.
      body.classList.add("overflow-hidden");
    }

    function closeMenu() {
      if (!menuOverlay) return;
      menuOverlay.classList.add("opacity-0", "invisible");
      // FIX 2: Remove the class to restore body scroll.
      body.classList.remove("overflow-hidden");
    }

    // Event listeners
    menuButton?.addEventListener("click", openMenu);
    closeButton?.addEventListener("click", closeMenu);

    // Close menu when clicking on nav links
    const navLinks = menuOverlay?.querySelectorAll("nav a");
    navLinks?.forEach((link) => {
      link.addEventListener("click", closeMenu);
    });

    // Close menu with Escape key
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && !menuOverlay?.classList.contains("invisible")) {
        closeMenu();
      }
    });
  </script>
</div>
